<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="8">

    <TextView
        android:id="@+id/answer_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textSize="12sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="微软雅黑"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.bmob.im.demo.view.CircleImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/avatar_for_responder"
            />
    <TextView
        android:id="@+id/answer_responder"
        android:layout_margin="5dp"
        android:text="@string/loading"
        android:textSize="8sp"
        android:fontFamily="微软雅黑"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        />
        <ImageView
            android:id="@+id/like_answer"
            android:src="@drawable/like"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/answer_number"
            android:layout_margin="5dp"
            android:text="@string/loading"
            android:textSize="8sp"
            android:fontFamily="微软雅黑"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
        </LinearLayout>
    </LinearLayout>
        <ImageView
            android:id="@+id/avatar_for_answer_iv"
            android:layout_weight="2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</LinearLayout>